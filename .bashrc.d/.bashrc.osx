# for virtualenvwrapper
if [ -f `brew --prefix`/bin/virtualenvwrapper.sh ]; then
   export WORKON_HOME=$HOME/.virtualenvs
   export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python
   source `brew --prefix`/bin/virtualenvwrapper.sh
fi

