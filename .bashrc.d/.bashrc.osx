# for pythonbrew
if [ -f `brew --prefix`/pythonbrew/etc/bashrc ]; then
   export PYTHONBREW_ROOT=`brew --prefix`/pythonbrew
   source `brew --prefix`/pythonbrew/etc/bashrc
fi

# for bash_compilation
if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

# for pyqt
if [ -d `brew --prefix`/lib/python/PyQT4 ]; then
   export PYTHONPATH=`brew --prefix`/lib/python:$PYTHONPATH
fi
