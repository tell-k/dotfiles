# .bashrc.basic

# Source global definitions
if [ -f /etc/bashrc ]; then
   . /etc/bashrc
fi

# ?
export LESS=-r

# ls color
if which dircolors >& /dev/null; then
  eval `dircolors`
  export LS_OPTIONS='--color=auto'
else
  export CLICOLOR=1
  export LSCOLORS=Gxfxcxdxbxegedabagacad
fi

#umask settings
umask 002
