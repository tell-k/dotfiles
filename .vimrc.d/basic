"General settings--------------------------------------------

set ignorecase
set expandtab
"set softtabstop=4
"set shiftwidth=4
set laststatus=2
set clipboard=unnamed,autoselect
set showmatch
set hlsearch
set showcmd
set tags=tags
set hid
set backspace=indent,eol,start
set ambiwidth=double

set statusline=%<%f\ %m%r%h%w%{'['.(&fenc!=''?&fenc:&enc).']['.&ff.']'}%=%l,%c%V%8P
set term=builtin_linux
set ttytype=builtin_linux
set nowrap
set title
set ruler
map <S-L> <ESC>:bp<CR>
map <S-K> <ESC>:bn<CR>

command -range Copy :<line1>, <line2> write! ~/.vimclip
command -range Cut :<line1>, <line2> write! ~/.vimclip | :<line1>, <line2> delete
command Past :read ~/.vimclip

set fdm=marker
set listchars=tab:>-
set list
" refs http://www.dna.bio.keio.ac.jp/~yuji/vim/gvimrc.txt
set vb t_vb=

colorscheme zellner
syntax on

au BufRead,BufNewFile *.txt     setfiletype text
au BufNewFile,BufRead *.less    setfiletype less
